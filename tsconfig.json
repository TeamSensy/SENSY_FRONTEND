{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["jest"],
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
